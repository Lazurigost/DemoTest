@model IEnumerable<Demo_test_app.Models.Application>

@{
    ViewData["Title"] = "Заявки";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <div>
        <div>
            <label>Поиск: </label>
            <input type="text" name="search"/>
        </div>
    </div>
    @if(ViewBag.IsDisp != null)
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
    else{
        <p>Pashalka</p>
    }
    
    <table class="table">
    <thead>
        <tr>
            <th>
                Название оборудования
            </th>
            <th>
                Тип проблемы
            </th>
            <th>
                Комментарий
            </th>
            <th>
                Статус
            </th>
            <th>
                ФИО Клиента
            </th>
            <th>
                Стоимость
            </th>
            <th>
                Исполнитель
            </th>
            <th>
                Этап выполнения
            </th>
            <th>
