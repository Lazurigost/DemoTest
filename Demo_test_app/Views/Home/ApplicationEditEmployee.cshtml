@model Demo_test_app.Models.Application

@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Редактирование заявки";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование заявки</title>
</head>
<body>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="Comment" class="control-label">Комментарий</label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label">Стоимость</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkStatus" class="control-label">Этап выполнения</label>
                <select asp-for="WorkStatus" class="form-select">
                    <option>TO 1</option>
                    <option>TO 2</option>
                    <option>TO 3</option>
                </select>
                <span asp-validation-for="WorkStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeWork" class="control-label">Затраченное время</label>
                <input asp-for="TimeWork" class="form-control"/>
                <span asp-validation-for="TimeWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
